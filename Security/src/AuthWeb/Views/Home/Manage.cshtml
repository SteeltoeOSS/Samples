@using System.Security.Claims
<h4>Hello @User.Identity?.Name, here is the claim data attached to your account:</h4>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Claim type</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Claim claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>
