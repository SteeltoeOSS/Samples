@using MySqlEFCore.Entities
@model MySqlViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Steeltoe: Display information from EF Core DbContext. -->
<div class="alert alert-secondary">
    <h4>MySQL server info</h4>
    <table class="table table-bordered table-primary">
        <thead>
        <tr>
            <th scope="col">Connection String</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@Model.ConnectionString</td>
        </tr>

        @if (Model.OtherConnectionString != null)
        {
            <tr>
                <td>@Model.OtherConnectionString</td>
            </tr>
        }

        </tbody>
    </table>

    <h4>Rows stored in MySQL AppDbContext</h4>
    <table class="table table-bordered table-primary">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Text</th>
        </tr>
        </thead>
        <tbody>
        @foreach (SampleEntity entity in Model.SampleEntities)
        {
            <tr>
                <td>@entity.Id</td>
                <td>@entity.Text</td>
            </tr>
        }
        </tbody>
    </table>

    @if (Model.OtherEntities != null)
    {
        <h4>Rows stored in MySQL OtherDbContext</h4>
        <table class="table table-bordered table-primary">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Text</th>
            </tr>
            </thead>
            <tbody>
            @foreach (OtherEntity otherEntity in Model.OtherEntities)
            {
                <tr>
                    <td>@otherEntity.Id</td>
                    <td>@otherEntity.Text</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
