{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "None",
      "Steeltoe.Discovery": "None",
      "Steeltoe.Management.OpenTelemetry.Exporters": "Trace",
      "Steeltoe.Management.Tracing.Observer.HttpClientCoreObserver": "None",
      "FortuneTellerService": "Information"
    },
    "Console": {
      "DisableColors": true
    }
  },
  "Spring": {
    "Application": {
      "Name": "fortuneUI"
    }
  },
  "Eureka": {
    "Client": {
      "serviceUrl": "http://localhost:8761/eureka/",
      "ShouldRegisterWithEureka": false
    }
  },
  "Management": {
    "Tracing": {
      "AlwaysSample": true
    },
    "endpoints": {
      "actuator": {
        "exposure": {
          "include": [ "*" ]
        }
      }
    },
    "metrics": {
      "observer": {
        "EventCounterEvents": "true",
        "GCEvents": "true",
        "ThreadPoolEvents": "true"
      },
      "export": {
        "wavefront": {
          "Uri": "https://vmware.wavefront.com",
          "apiToken": "<your-api-token>",
          "step": "5000"
        }
      }
    }
  },
  "wavefront": {
    "application": {
      "name": "SteeltoeApp",
      "service": "FortuneTeller-UI"
    }
  }
}