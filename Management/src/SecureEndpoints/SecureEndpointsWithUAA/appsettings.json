{
  "$schema": "https://steeltoe.io/schema/v3/schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "Steeltoe": "Information"
    },
    "Console": {
      "DisableColors": true
    }
  },
  "Management": {
    "Endpoints": {
      "CloudFoundry": {
        "ValidateCertificates": false
      },
      "Actuator": {
        "Exposure": {
          "Include": [ "*" ]
        }
      }
    }
  },
  "info": {
    "appsetting1": "appsetting1",
    "appsetting2": "appsetting2",
    "appsetting3": "appsetting3",
    "appsetting4": "appsetting4"
  },
  "Security": {
    "Oauth2": {
      "Client": {
        "ClientId": "fortuneui",
        "ClientSecret": "fortuneui_secret",
        "AuthDomain": "http://localhost:8080",
        "additionalScopes": "fortunes.read",
        "saveTokens": true
      }
    }
  }
}
