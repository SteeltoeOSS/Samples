{
  // Steeltoe: Add schema to get auto-completion.
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // Steeltoe: configure exposure of all actuators.
  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": [ "*" ]
        }
      },
      // Return all properties in HttpExchanges
      "HttpExchanges": {
        "AddRequestHeaders": true,
        "AddResponseHeaders": true,
        "AddPathInfo": true,
        "AddUserPrincipal": true,
        "AddParameters": true,
        "AddQueryString": true,
        "AddAuthType": true,
        "AddRemoteAddress": true,
        "AddSessionId": true,
        "AddTimeTaken": true
      },
      // Configure actuators to be exposed on a dedicated port
      "Port": "9990"
    }
  }
}
