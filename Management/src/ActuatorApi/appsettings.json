{
  // Steeltoe: Add schema to get auto-completion.
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Steeltoe.Samples.ActuatorApi.Models.WeatherForecast": "Debug"
    }
  },
  "AllowedHosts": "*",
  // Steeltoe: Configure Actuators to be exposed on a dedicated port and include all available properties in HttpExchanges.
  "Management": {
    "Endpoints": {
      "Health": {
        "ShowDetails": "WhenAuthorized",
        "Claim": {
          "Type": "scope",
          "Value": "actuator.read"
        }
      },
      "HttpExchanges": {
        "AddAuthType": true,
        "AddParameters": true,
        "AddPathInfo": true,
        "AddQueryString": true,
        "AddRemoteAddress": true,
        "AddRequestHeaders": true,
        "AddResponseHeaders": true,
        "AddSessionId": true,
        "AddTimeTaken": true,
        "AddUserPrincipal": true
      },
      "Port": "9991"
    }
  },
  "Spring": {
    "Application": {
      "Name": "ActuatorApi"
    }
  }
}
