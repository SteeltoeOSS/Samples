{
  // Steeltoe: Add schema to get auto-completion.
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // Steeltoe: Configure Actuators to be exposed on a dedicated port and include all available HttpExchange properties.
  "Management": {
    "Endpoints": {
      "HttpExchanges": {
        "AddRequestHeaders": true,
        "AddResponseHeaders": true,
        "AddPathInfo": true,
        "AddUserPrincipal": true,
        "AddParameters": true,
        "AddQueryString": true,
        "AddAuthType": true,
        "AddRemoteAddress": true,
        "AddSessionId": true,
        "AddTimeTaken": true
      },
      "Port": "9999"
    }
  }
}
